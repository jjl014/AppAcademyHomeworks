<form class="form group" action="<%= action %>" method="<%= method %>">
  <%= auth_token %>

  <label for="email">Email</label>
  <input id="email" type="text" name="user[email]" placeholder="example@example.com">
  <br>
  <label for="password">Password</label>
  <input id="pw" type="password" name="user[password]" placeholder="Password">
  <% button_value = action == users_url ? "Create User" : "Sign In"%>
  <br>
  <input type="submit" value="<%= button_value %>">
</form>
